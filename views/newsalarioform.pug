extends default

block content

  include nav

  div(class=['ui', 'container', 'grid', 'stackable'])
    div(class=['ten', 'wide', 'column'])

      h2(class=['ui', 'header', 'blue', 'dividing'])= 'Actualizar un Salario'

      div(class='form-nuevoproductofirebase')
        form(class=['ui', 'form'] action=`/index/myupdate/${mivariable._id}` method='post')
          .ui.field
            label(for='username') Username
            input(type='text', name='username', value=mivariable.username)
          .ui.field
            label(for='salario') Salario
            input(type='text', name='salario', value=mivariable.salario)
          .ui.field
            label(for='salario_sin_descuento') Salario Sin Descuento
            input(type='text', name='salario_sin_descuento', value=mivariable.salario_sin_descuento) 
          .ui.field
            label(for='descuento_renta') Descuento de Renta
            input(type='text', name='descuento_renta', value=mivariable.descuento_renta) 
          .ui.field
            label(for='descuento_iss') Descuento ISS
            input(type='text', name='descuento_iss', value=mivariable.descuento_iss)
          .ui.field
            label(for='descuento_afp') Descuento AFP
            input(type='text', name='descuento_afp', value=mivariable.descuento_afp)
          .ui.input
            input#boton-enviar-producto-firebase(type='submit', name='', value='Actualizar Salario')